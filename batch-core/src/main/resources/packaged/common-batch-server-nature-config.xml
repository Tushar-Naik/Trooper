<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:batch="http://www.springframework.org/schema/batch"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
    http://www.springframework.org/schema/beans classpath:org/springframework/beans/factory/xml/spring-beans-2.5.xsd	
    http://www.springframework.org/schema/batch classpath:packaged/xsd/spring-batch-2.1.xsd
    http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.0.xsd
    http://www.springframework.org/schema/context classpath:org/springframework/context/config/spring-context-2.5.xsd">

	<!-- The Jetty server beans  -->
    <bean id="jettyServer" class="org.eclipse.jetty.server.Server" init-method="start"> <!-- Dont specify destroy-method attribute here as it shutsdown the JVM -->
		<property name="threadPool">  
		     <bean id="ThreadPool" class="org.eclipse.jetty.util.thread.QueuedThreadPool" destroy-method="stop"> <!-- Specify the destroy-method here to close the thread pool-->
		     	<property name="name" value="Jetty-Listener"/>
		        <property name="minThreads" value="2"/>
		        <property name="maxThreads" value="5"/>
		     </bean>
		</property>   
        <property name="connectors">
            <list>
                <bean id="Connector" class="org.trpr.platform.batch.impl.jetty.SelectChannelConnector" destroy-method="stop"> <!-- Specify the destroy-method here to close the server socket -->
                    <property name="jobConfigService" ref="jobConfigService" />
                    <property name="port" value="${batch.core.jetty.admin.port}"/>
                    <property name="acceptors" value="2"/>                    
                </bean>
            </list>
        </property>
       <property name="handler">
            <bean id="handlers"
                  class="org.eclipse.jetty.server.handler.HandlerCollection">
                <property name="handlers">
                    <list>
                        <bean id="contexts"
                              class="org.eclipse.jetty.server.handler.ContextHandlerCollection">
                            <property name="handlers">
                                <list>
                                    <bean class="org.trpr.platform.batch.impl.jetty.JettyWebAppContextFactory">
										<property name="contextName" value="/"/>
										<property name="contextPath" value="WEB-INF"/>	
										<property name="maxFormContentSize" value="${batch.core.jetty.maxFormContentSize}"/>                                    	
                                    </bean>
                                </list>
                            </property>
                        </bean>
                    </list>
                </property>
            </bean>
        </property>
    </bean>
	<bean class="org.trpr.platform.runtime.impl.config.spring.PropertyPlaceholderConfigurer">
		<property name="defaultPropertiesOnClasspath" value="packaged/default-batch-core-config.properties"/>
		<property name="propertiesOnConfigPath" value="batch-core-config.properties"/>
	</bean>    
</beans>
